{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "🚀 啟動FPS遊戲熱度追踪器",
            "program": "${workspaceFolder}/improved-server.js",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "restart": true,
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "🐛 調試模式啟動",
            "program": "${workspaceFolder}/improved-server.js",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "restart": true,
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "std",
            "stopOnEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
} 